<h1>Users</h1>

<div class="container">
  {{#each users}}
    <div class="item">
      <h2>{{this.name}}</h2>
      <p>{{this.occupation}}</p>
      <div class="actions">
        <a href="/users/{{this.userid}}">Ver Detalhes</a>
        <a href="/users/edit/{{this.userid}}">Editar</a>
        <form action="/users/delete/{{this.userid}}" method="post">
          <input type="submit" value="Excluir" class="delete-btn">
        </form>
      </div>
    </div>
  {{/each}}
</div>

<a href="/">Home</a>